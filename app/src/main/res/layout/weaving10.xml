<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="412dp"
        android:layout_height="917dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lion1_2" />

    <ImageButton
        android:id="@+id/backBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/untitled_design__9__1" />

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView30"
        app:srcCompat="@drawable/frame_27" />

    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/weaver" />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/puzzle_bg"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView30"
        app:layout_constraintTop_toBottomOf="@+id/imageView35">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:columnCount="3"
            app:rowCount="3"
            app:useDefaultMargins="true">

            <ImageButton
                android:id="@+id/ik1"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/ik2"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/i4" />

            <ImageButton
                android:id="@+id/ik3"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/i7" />

            <ImageButton
                android:id="@+id/ik4"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/i2" />

            <ImageButton
                android:id="@+id/ik5"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/i5" />

            <ImageButton
                android:id="@+id/ik6"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/i8" />

            <ImageButton
                android:id="@+id/ik7"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/i3" />

            <ImageButton
                android:id="@+id/ik8"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/i6" />

            <ImageButton
                android:id="@+id/ik9"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/i9" />
        </androidx.gridlayout.widget.GridLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>